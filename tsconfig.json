{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "baseUrl": ".",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2018"
  },
  "include": [
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
